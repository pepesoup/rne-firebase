{
    "compilerOptions": {
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@src/*": ["./src/*"],
            "@components/*": ["./src/components/*"]
        }
    },
    "extends": "expo/tsconfig.base",
    "typeRoots": ["./types"],
    "include": ["**/*.ts", "**/*.tsx", "**/**/*.ts", "**/**/*.tsx"],
    "exclude": ["node_modules"]
}
